@model IEnumerable<STG.Models.Lessons>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Subjects.Name)
        </th>
        <th>
            Teacher
        </th>
        <th>
            Group
        </th>
        <th>
            Room
        </th>
        <th>
            Room type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Schedule)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Subjects.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Teachers.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Groups.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rooms.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomTypes.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Schedule)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
