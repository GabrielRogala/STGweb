@model IEnumerable<STG.Models.STGConfig>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PopulationSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EpocheSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfLessonToPositioning)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BottomBorderOfBestSlots)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TopBorderOfBestSlots)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProbabilityOfMutation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PopulationSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EpocheSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfLessonToPositioning)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BottomBorderOfBestSlots)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TopBorderOfBestSlots)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProbabilityOfMutation)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
